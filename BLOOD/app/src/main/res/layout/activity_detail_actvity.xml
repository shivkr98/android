<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActvity"
    android:orientation="vertical"
    android:padding="10dp"

    >



       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/donor" />

       </LinearLayout>

       <LinearLayout
           android:layout_width="394dp"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:id="@+id/txtname"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:text="name"
               android:textSize="20dp" />

           <TextView
               android:id="@+id/txtblood_g"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:text="blood_group"
               android:textSize="20dp" />


           <TextView
               android:id="@+id/txtdonate_date"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:text="donation date"
               android:textSize="20dp" />


           <TextView
               android:id="@+id/txtage"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:text="age"
               android:textSize="20dp" />


           <TextView
               android:id="@+id/txtmobile"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:text="mobile"
               android:textSize="20dp" />

           <TextView
               android:id="@+id/txtlast_year"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:text="last year problem"
               android:textSize="20dp" />


           <TextView
               android:id="@+id/txthealth_pro"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:text="health problem"
               android:textSize="20dp" />


       </LinearLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >

           <ImageButton
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:id="@+id/bt_call"
               android:src="@drawable/ic_call"
               android:background="@drawable/circle"/>

       </LinearLayout>









</LinearLayout>